// Email import tracking
model EmailImport {
  id              Int       @id @default(autoincrement())

  // Gmail metadata
  gmailMessageId  String    @unique
  emailSubject    String?
  emailFrom       String
  emailDate       DateTime

  // Attachment
  attachmentName  String?
  attachmentUrl   String?
  attachmentType  String?

