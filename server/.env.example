# Database
DATABASE_URL="file:../database/orient-insight.db"

# Server
PORT=3001
NODE_ENV=development

# Security
JWT_SECRET="your-secret-key-change-in-production"
ENCRYPTION_KEY="your-32-character-encryption-key"

# Gmail API Credentials (for automatic booking import)
# Get credentials from: https://console.cloud.google.com/
GMAIL_CLIENT_ID=your-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-client-secret
GMAIL_REDIRECT_URI=http://localhost:3001/api/gmail/callback

# Gmail Polling Settings
GMAIL_POLL_ENABLED=true
GMAIL_POLL_INTERVAL=5

# Email Notifications (for import results)
GMAIL_USER=noreply@orient-insight.com
GMAIL_APP_PASSWORD=your-app-password
GMAIL_NOTIFY_EMAIL=admin@orient-insight.com

# Claude AI API (for screenshot parsing)
ANTHROPIC_API_KEY=sk-ant-your-api-key

# Frontend URL (for email notifications)
FRONTEND_URL=http://localhost:3000
